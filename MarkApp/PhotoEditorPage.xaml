<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="MarkApp.PhotoEditorPage"
             Title="Редактирование фото">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- SkiaSharp канвас для редактирования фото -->
        <skia:SKCanvasView x:Name="canvasView" 
                           PaintSurface="OnCanvasViewPaintSurface"
                           EnableTouchEvents="True"
                           Touch="OnCanvasViewTouch"/>

        <!-- Панель инструментов -->
        <Grid Grid.Row="1" BackgroundColor="#f0f0f0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Text="Выбрать фото" 
                    Grid.Column="0"
                    Clicked="OnPickPhotoClicked"
                    Margin="5"/>

            <Button Text="Метки" 
                    Grid.Column="1"
                    x:Name="markModeButton"
                    Clicked="OnMarkModeClicked"
                    Margin="5"/>

            <Button Text="Отменить"
                    Grid.Column="2" 
                    Clicked="OnUndoClicked"
                    Margin="5"/>

            <Button Text="Сохранить" 
                    Grid.Column="3"
                    Clicked="OnSavePhotoClicked"
                    Margin="5"/>
        </Grid>
    </Grid>
</ContentPage>