<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ImageEditor;assembly=Syncfusion.Maui.ImageEditor"
             x:Class="MarkApp.EditPhotoPage"
             Title="Редактирование фото">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <syncfusion:SfImageEditor x:Name="PhotoEditor"
                                 Grid.Row="0"
                                 VerticalOptions="Fill"
                                 HorizontalOptions="Fill"/>

        <HorizontalStackLayout Grid.Row="1" 
                              Spacing="10" 
                              Padding="10"
                              HorizontalOptions="Center">
            <Button Text="Включить режим меток" 
                    Clicked="OnMarkPointsClicked"
                    WidthRequest="180"
                    HeightRequest="50"
                    Margin="5"/>
            <Button Text="Добавить метку" 
                    Clicked="OnAddMarkClicked"
                    WidthRequest="130"
                    HeightRequest="50"
                    Margin="5"/>
            <Button Text="Сохранить" 
                    Clicked="OnSaveClicked"
                    WidthRequest="100"
                    HeightRequest="50"
                    Margin="5"/>
            <Button Text="Отмена" 
                    Clicked="OnCancelClicked"
                    WidthRequest="100"
                    HeightRequest="50"
                    Margin="5"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>